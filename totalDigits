
<SCRIPT>
function totalDigits(num) {
     var i, sum = 0;                  // declaring two variables at once

     for (i = 1; i <= num; i++) {
             sum += i;              // add each number to sum (ie, 1 + 2 + ...+ num)
     }

     // Display result
     alert("The sum of the digits from 1 to "+ num + " is:\n\n\t " + sum);
}

</SCRIPT>
