<SCRIPT>
function totalDigits(num) {
     var i; 
     sum = 0;                  // declaring two variables

     for (i = 1; i <= num; i++) {
             sum += i;              // add each number to sum (ie, 1 + 2 + ...+ num)
     }

     // Display result
     alert("The sum of the digits from 1 to "+ num + " is:\n\n\t " + sum);
}

</SCRIPT>

<FORM NAME="TotalNums">
     The total sum of the digits from 1 to:
     <INPUT TYPE="text" NAME="charNum">
     <INPUT TYPE="button" VALUE="Add"
       onClick="sumDigits(TotalNums.charNum.value)">
</FORM>
